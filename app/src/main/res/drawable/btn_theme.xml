<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape android:shape="rectangle" tools:ignore="ExtraText">
        <gradient
            android:startColor="#fc00ff"
            android:endColor="#00dbde"
            android:angle="270" />
        <corners android:radius="30dip"/>
        <stroke android:width="4dip" />
       />
    </shape>
</item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#fc00ff"
                android:endColor="#00dbde"
                android:angle="270" />
        <corners android:radius="30dip"/>
        <stroke android:width="4dip" />
        />
        </shape>
    </item>
    <item android:shape="rectangle">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00dbde"
                android:endColor="#fc00ff"
                android:angle="270" />
        <corners android:radius="30dip"/>
        <stroke android:width="4dip" />
        />
        </shape>
    </item>
</selector>