<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ShtrafFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20sp"
            android:ems="10"
            android:fontFamily="@font/open_sans"
            android:hint="ГОСУДАРСТВЕННЫЙ НОМЕР"
            android:inputType="textPersonName"

            android:minHeight="48dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="50dp"
            android:ems="10"
            android:fontFamily="@font/open_sans"
            android:hint="СТС"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/shtrafbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/btn_theme"
            android:fontFamily="@font/open_sans"
            android:text="ПРОВЕРИТЬ НАЛИЧИЕ ШТРАФА"

            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <fragment
            android:id="@+id/output_frame"
            android:name="com.example.gai.VivodFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </fragment>

    </LinearLayout>
</FrameLayout>